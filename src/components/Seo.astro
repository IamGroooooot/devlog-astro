---
import { SEO } from 'astro-seo';

interface Props {
    title?: string;
    description?: string;
    ogImage?: string;
}
const {
    title,
    description = 'I post about web development, programming, and tech. I write about my experiences and share my knowledge with the community.',
    ogImage = 'https://groot-devlog.netlify.app/og.png',
} = Astro.props as Props;
---

<SEO
    title={title ? `${title} | coding-groot` : 'coding-groot blog'}
    description={description}
    openGraph={{
        basic: {
            title: 'coding-groot',
            type: 'website',
            image: ogImage,
        },
    }}
    extend={{
        link: [
            {
                rel: 'sitemap',
                href: '/sitemap-index.xml',
            },
        ],
        meta: [
            {
                name: 'google-site-verification',
                content: '123',
            },
            {
                name: 'yandex-verification',
                content: '123',
            },
        ],
    }}
/>
